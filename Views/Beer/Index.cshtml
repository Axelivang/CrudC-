@model List<Beer>

<h1 class="mb-4">Beers</h1>

<p>
    <a class="btn btn-primary mb-3" asp-action="Create">Nueva Cerveza</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Nombre</th>
            <th>Marca</th>
            <th class="text-center">-</th>
            <th class="text-center">-</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var beer in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => beer.Name)</td>
                <td>@Html.DisplayFor(m => beer.Brand.Name)</td>
                <td class="text-center">
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@beer.BeerId">Edit</a>
                </td>
                <td class="text-center">
                    <form asp-action="Delete" method="post" onsubmit="return confirm('¿Estás seguro de que quieres eliminar esta cerveza?');">
                        <input type="hidden" name="beerId" value="@beer.BeerId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
